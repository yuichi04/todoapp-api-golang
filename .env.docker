# Docker環境用設定ファイル
# docker-compose.yml で使用する環境変数を定義

# アプリケーション設定
APP_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=info

# サーバー設定
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# データベース設定（Docker Compose用）
# docker-compose.yml のサービス名を使用
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_NAME=todoapp
DB_USER=todouser
DB_PASSWORD=todopass
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=60

# MySQL設定（docker-compose.yml用）
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=todoapp
MYSQL_USER=todouser
MYSQL_PASSWORD=todopass

# phpMyAdmin設定
PMA_HOST=mysql
PMA_PORT=3306
PMA_USER=root
PMA_PASSWORD=rootpassword